{
    "agent": {
      "metrics_collection_interval": 10,
      "region":"us-west-2"
    },
    "metrics": {
      "metrics_collected": {
        "disk": {
          "resources": ["/", "/tmp"],
          "measurement": ["disk_used_percent"],
          "ignore_file_system_types": ["sysfs", "devtmpfs"]
        },
        "mem": {
          "measurement": ["mem_available_percent"]
        }
      },
      "aggregation_dimensions": [["InstanceId", "InstanceType"], ["InstanceId"]]
    },
    "logs": {
        "logs_collected": {
            "files" :{
                "collect_list":[
                    {
                        "file_path":"/var/log/syslog*"
                    }
                ]
                
            }
        },
        "metrics_collected":{
          "prometheus":{
             "cluster_name":"prometheus-cluster",
             "log_group_name":"blade",
             "prometheus_config_path":"/opt/aws/amazon-cloudwatch-agent/prometheus.yml",
             "emf_processor":{
                "metric_declaration_dedup":true,
                "metric_namespace":"BLADE_Metrics",
                "metric_unit":{
                   "edge_consensus_base_fee": "Gauge",
                   "edge_consensus_block_building_time": "Gauge",
                   "edge_consensus_block_counter": "Counter",
                   "edge_consensus_block_execution_time" : "Gauge",
                   "edge_consensus_block_interval" : "Gauge",
                   "edge_consensus_block_space_used": "Gauge",
                   "edge_consensus_chain_head" : "Gauge",
                   "edge_consensus_epoch_number" : "Gague",
                   "edge_consensus_num_txs" : "Gague",
                   "edge_consensus_rounds": "Gauge"
                },
                "metric_declaration":[
                   {
                      "source_labels":[
                         "job"
                      ],
                      "label_matcher":"blade",
                      "dimensions":[
                         [
                            "name", "host"
                         ]
                      ],
                      "metric_selectors":[
                         "^edge_consensus_chain_head$",
                         "^edge_consensus_epoch_number$",
                         "^edge_consensus_num_txs$",
                         "^edge_consensus_rounds$"
                      ]
                   }
                ]
             }
          }
       }
    }
}